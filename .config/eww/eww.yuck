(defwindow statusbar
	:monitor 0
	:geometry (geometry
		:x "0%"
		:y "0%"
		:width "100%"
		:height "30px"
		:anchor "top center"
	)
	:stacking "fg"
	:exclusive true

	(bar
		:name "cs"
	)
)

(defwidget bar [name]
	(box
		:class "barbox"
		:space-evenly: false

		(left)
		(center)
		(right)
	)
)

(defwidget left []
	(box
		:class "left"

		:hexpand: true
		"left"
	)
)

(defwidget center []
	(box
		:class "center"

		"center"
	)
)

(defwidget right []
	(box
		:class "right"

		"right"
	)
)
